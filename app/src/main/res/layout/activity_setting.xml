<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/setting_head"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_setting_account"
            android:textSize="20sp"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap"/>

        <ImageView
            android:layout_width="60dp"
            android:contentDescription="@string/des_head_img"
            android:layout_alignParentEnd="true"
            android:id="@+id/img_head_setting"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_height="60dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/setting_theme"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_setting_theme"
            android:textSize="20sp"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_setting_autoLogin"
            android:textSize="20sp"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/switch_autoLogin"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/setting_feedback"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_setting_Feedback"
            android:textSize="20sp"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/setting_AboutUS"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_setting_AboutUS"
            android:textSize="20sp"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

</LinearLayout>
