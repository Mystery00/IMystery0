<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:background="@color/viewPager"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:contentDescription="@string/des_viewpager_img"
        android:layout_height="match_parent"
        android:src="@drawable/bg_viewpager_3"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:contentDescription="@string/des_viewpagerButton_img"
        android:id="@+id/viewpager_last_intent"
        android:background="@drawable/btn_intent"
        android:layout_marginBottom="133dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
